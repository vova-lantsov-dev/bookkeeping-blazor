@layout __Layout
@page "/teacher"
@page "/teacher/{Id}"
@inherits BookkeepingNasheDetstvo.Client.Components.ActionComponents.BaseComponent

<LoadingAction IsOk="@IsOk" CheckIfNullObject="@_teacher" NotOkText="Произошла ошибка при поиске преподавателя."
               NotOkSubmitButtonText="Вернуться назад" NotOkRedirectUrl="/teachers">
    <Avatar AvatarUrl="@_teacher.ImageUrl" />
    <TeacherComponent ReadGlobalStatistic="@Current.ReadGlobalStatistics" Teacher="@_teacher" EditTeachers="@Current.EditTeachers" />
</LoadingAction>

@functions
{
    private T _teacher;
    
    [Parameter] private string Id { get; set; }

    protected override async Task OnInitAsync()
    {
        await CheckAccessToken();
        await LoadCurrent();
        _teacher = !string.IsNullOrEmpty(Id)
            ? await Get<T>($"/api/teacher/{Id}")
            : new T
            {
                PerHour = 0m,
                Additional = "",
                Email = "",
                FirstName = "",
                ImageUrl = "",
                LastName = "",
                PhoneNumber = "+380",
                ReadGlobalStatistics = false,
                SecondName = "",
                EditChildren = false,
                EditTeachers = false,
                EditSubjects = false,
                PerHourGroup = 0m,
                IsOwner = false
            };

        IsOk = _teacher != default;
    }
}