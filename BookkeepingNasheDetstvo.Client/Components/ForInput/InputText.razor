<label>@Label</label>
<input class="w3-input" type="text" bind="@Value" oninput="(this.dispatchEvent(new CustomEvent('change', {bubbles: true})))" />

@functions {
    [Parameter]
    private string Label { get; set; }

    [Parameter]
    private string Value { get; set; }

    [Parameter]
    private EventCallback<string> ValueChanged { get; set; }
}