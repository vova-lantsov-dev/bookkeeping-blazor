@if (!Disabled)
{
    <div class="w3-padding-small">
        <button class="w3-button w3-@Color w3-text-white w3-hover-@(NoHover ? Color : "white") w3-hover-text-@(NoHover ? "white" : Color) w3-border-@Color w3-block w3-border" onclick=@Click>@Text</button>
    </div>
}
else
{
    <div class="w3-padding-small">
        <button class="w3-button w3-@Color w3-text-white w3-hover-@(NoHover ? Color : "white") w3-hover-text-@(NoHover ? "white" : Color) w3-border-@Color w3-block w3-border" onclick=@Click disabled>@Text</button>
    </div>
}

@functions {
    [Parameter]
    string Color { get; set; }
    
    [Parameter]
    bool Disabled { get; set; }
    
    [Parameter]
    string Text { get; set; }
    
    [Parameter]
    System.Action Click { get; set; }
    
    [Parameter]
    bool NoHover { get; set; }
}