@if (EditChildren)
{
    <ChildInputs Child="@Child" ReadGlobalStatistic="@ReadGlobalStatistics" />
}
else
{
    <ChildReadOnly Child="@Child" ReadGlobalStatistic="@ReadGlobalStatistics" />
}

@functions
{
    [Parameter]
    private bool EditChildren { get; set; }

    [Parameter]
    private bool ReadGlobalStatistics { get; set; }

    [Parameter]
    private ChildModel Child { get; set; }
}
