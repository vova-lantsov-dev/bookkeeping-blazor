@if (EditChildren)
{
    <ChildInputs Base="child" Child="@Child" ReadGlobalStatistic="@ReadGlobalStatistics" />
}
else
{
    <ChildReadOnly Child="@Child" ReadGlobalStatistic="@ReadGlobalStatistics" />
}

@functions
{
    [Parameter] private bool EditChildren { get; set; }
    
    [Parameter] private bool ReadGlobalStatistics { get; set; }
    
    [Parameter] private C Child { get; set; }
}
