@if (EditTeachers)
{
    <TeacherInputs Teacher="@Teacher" ReadGlobalStatistic="@ReadGlobalStatistic" />
}
else
{
    <TeacherReadOnly Teacher="@Teacher" ReadGlobalStatistic="@ReadGlobalStatistic" />
}

@functions
{
    [Parameter]
    private bool EditTeachers { get; set; }

    [Parameter]
    private bool ReadGlobalStatistic { get; set; }

    [Parameter]
    private TeacherModel Teacher { get; set; }
}
