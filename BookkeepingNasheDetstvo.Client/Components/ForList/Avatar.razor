@if (!string.IsNullOrEmpty(AvatarUrl))
{
    <div class="w3-quarter w3-mobile w3-padding-small w3-margin-top w3-center">
        <img src="@AvatarUrl" class="w3-image" style="width:100%;max-width:250px" alt="Аватар" />
    </div>
    <div class="w3-cell" style="width:16px;height:8px"></div>
}

@functions
{
    [Parameter]
    private string AvatarUrl { get; set; }
}