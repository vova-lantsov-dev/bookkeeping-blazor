@inject IUriHelper UriHelper

<LoadingAction IsOk="@IsOk" CheckIfNullObject="@CheckIfNullObject" SubmitButtonText="Вернуться назад"
               Message="@Message" SubmitButtonAction="@(async () => UriHelper.NavigateTo(RedirectUrl))">
    @ChildContent
</LoadingAction>
               
@functions
{
    [Parameter] private bool IsOk { get; set; }

    [Parameter] private object CheckIfNullObject { get; set; }

    [Parameter] private string Message { get; set; }

    [Parameter] private string RedirectUrl { get; set; }

    [Parameter] private RenderFragment ChildContent { get; set; }
}
